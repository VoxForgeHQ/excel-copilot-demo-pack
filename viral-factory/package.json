{
  "name": "viral-factory",
  "version": "1.0.0",
  "private": true,
  "description": "VOXFORGE Viral Post Factory - Notion-RAG powered content generation",
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "db:generate": "pnpm --filter @viral-factory/db db:generate",
    "db:push": "pnpm --filter @viral-factory/db db:push",
    "db:migrate": "pnpm --filter @viral-factory/db db:migrate",
    "db:seed": "pnpm --filter @viral-factory/db db:seed",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "prettier": "^3.3.0",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  }
}
