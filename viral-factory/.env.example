# ==============================================
# VOXFORGE VIRAL POST FACTORY - ENVIRONMENT VARS
# ==============================================
# Copy to .env and fill in your values

# ===================
# DATABASE (Required)
# ===================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/viral_factory?schema=public"
DIRECT_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/viral_factory?schema=public"

# ===================
# REDIS (Required)
# ===================
REDIS_URL="redis://localhost:6379"

# ===================
# NOTION RAG (Required for vault sync)
# ===================
NOTION_TOKEN="secret_xxxxxxxxxxxxxxxxxxxx"
# Comma-separated list of database IDs to sync
NOTION_DATABASE_IDS="db_id_1,db_id_2"
# Or leave empty to search all accessible pages
# NOTION_DATABASE_IDS=""

# ===================
# AI / LLM (Required)
# ===================
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxxxx"
# Optional: specify model
OPENAI_MODEL="gpt-4o"
# Optional: embedding model
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# ===================
# PUBLISHING CONNECTORS (Optional)
# ===================
# Auto-publish feature flag (default: false)
AUTO_PUBLISH_ENABLED="false"

# Buffer API (optional)
BUFFER_ACCESS_TOKEN=""
BUFFER_PROFILE_IDS=""

# Metricool API (optional)
METRICOOL_API_KEY=""
METRICOOL_USER_ID=""

# Zapier/Make Webhooks (optional)
ZAPIER_WEBHOOK_URL=""
MAKE_WEBHOOK_URL=""

# ===================
# PLATFORM APIS (Optional - for real publishing)
# ===================
# Pinterest
PINTEREST_ACCESS_TOKEN=""
PINTEREST_BOARD_ID=""

# Instagram/Facebook
META_ACCESS_TOKEN=""
META_INSTAGRAM_ACCOUNT_ID=""

# TikTok
TIKTOK_ACCESS_TOKEN=""

# YouTube
YOUTUBE_API_KEY=""
YOUTUBE_REFRESH_TOKEN=""

# LinkedIn
LINKEDIN_ACCESS_TOKEN=""
LINKEDIN_PERSON_URN=""

# ===================
# APPLICATION CONFIG
# ===================
NODE_ENV="development"
PORT="3001"
WEB_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# ===================
# QUALITY GATES
# ===================
# Minimum score for assets (0-100)
MIN_ASSET_SCORE="70"
# Max regeneration attempts for low-scoring assets
MAX_REGEN_ATTEMPTS="3"

# ===================
# RISK GATE
# ===================
# Enable risk gate checks (default: true)
RISK_GATE_ENABLED="true"
# Topics requiring manual review (comma-separated)
SENSITIVE_TOPICS="medical,legal,financial,political"

# ===================
# SCHEDULING
# ===================
# Quiet hours (UTC) - no auto-publishing during these hours
QUIET_HOURS_START="23"
QUIET_HOURS_END="7"
# Default timezone for scheduling
DEFAULT_TIMEZONE="America/New_York"

# ===================
# OBSERVABILITY
# ===================
LOG_LEVEL="info"
# Optional: external tracing
# JAEGER_ENDPOINT=""
